# Single monitors config.
exec_always --no-startup-id xrandr --output DP-1 --auto --right-of DVI-I-1

set $win Mod4
set $mod Mod1

# font for window titles. ISO 10646 = Unicode
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1

# change system font.
font pango: Ubuntu Mono 10

# customize title colors to highlight the active window
# class                 border  backgr. text    indicator
client.focused          #3F8AC2 #096BAA #ffffff #00DA8E
client.focused_inactive #333333 #5F676A #ffffff #484e50
client.unfocused        #333333 #424242 #888888 #292d2e
client.urgent           #C10004 #900000 #ffffff #900000

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Disable focus follows mouse (doesn't play well with intellij's popup windows.
focus_follows_mouse yes

# start a terminal
#bindsym $win+Return exec i3-sensible-terminal
#bindsym $mod+Return exec gnome-terminal
bindsym $mod+Return exec konsole

# kill focused window
bindsym $mod+c kill

# start dmenu (a program launcher)
bindsym $mod+space exec dmenu_run

# lock screen
bindsym Ctrl+Shift+Return exec gnome-screensaver-command -l

# change volume
bindsym $mod+F6 exec amixer set Master toggle && amixer set Headphone toggle
bindsym $mod+F7 exec amixer set Master on && amixer set Headphone on && amixer set Master 2-
bindsym $mod+F8 exec amixer set Master on && amixer set Headphone on && amixer set Master 2+

# change focus
bindsym $mod+h focus left
bindsym $mod+t focus down
bindsym $mod+n focus up
